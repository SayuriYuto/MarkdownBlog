<div class="form-group">
  <label for="title">Title</label>
  <input
    required
    value="<%= article.title%>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea type="" name="description" id="description" class="form-control"><%= article.description%></textarea>
</div>
<div class="form-group">
  <label for="markdown">Markdown</label>
  <textarea required type="" name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<button class="btn btn-primary" type="submit">Save</button>
<a href="/" class="btn btn-secondary">Cancel</a>
